{
    "expo": {
        "name": "MyApp52",
        "slug": "MyApp52",
        "version": "1.0.0",
        "orientation": "portrait",

        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        
        "icon": "./assets/icon.png",
        "splash": {
            "image": "./assets/splash-screen.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "bundleIdentifier": "com.mycompany.MyApp52",
            "supportsTablet": true,
            "infoPlist": {
                "NSCameraUsageDescription": "Allow Generic_App to access your camera.",
                "NSPhotoLibraryUsageDescription": "Allow Generic_App to access your photos.",
                "NSUserNotificationUsageDescription": "Allow Generic_App to send you notifications.",
                "NSMotionUsageDescription": "Allow Generic_App to access your motion data.",
                
                "NSMicrophoneUsageDescription": "Allow Generic_App to record audio.",
                "NSContactsUsageDescription": "Allow Generic_App to access your contacts.",
                "NSLocationWhenInUseUsageDescription": "Allow Generic_App to access your location while the app is in use."
            }
        },
        "android": {
            "versionCode": 1,
            "adaptiveIcon": {
                "foregroundImage": "./assets/icon.png",
                "backgroundColor": "#42076F"
            },
            "package": "com.i_am_sankalp.MyApp52",
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE",
                "android.permission.RECORD_AUDIO",

                "android.permission.POST_NOTIFICATIONS",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.ACCESS_FINE_LOCATION"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },

        "plugins": [
            "expo-asset",
            "expo-font",
            [
                "expo-splash-screen",
                {
                    "android": {
                        "backgroundColor": "#ffffff",
                        "image": "./assets/splash-screen.png",
                        "imageWidth": 300
                    },
                    "ios": {
                        "backgroundColor": "#ffffff",
                        "image": "./assets/splash-screen.png",
                        "resizeMode": "contain"
                    }
                }
            ],
            "expo-secure-store",
            "expo-barcode-scanner",
            "expo-sqlite",
            "expo-image-picker",
            "expo-notifications"
        ],
        
        "extra": {
            "eas": {
                "projectId": "9a772439-d019-4754-b333-bb6cf320fbb1"
            }
        },
        "runtimeVersion": {
            "policy": "appVersion"
        },
        "updates": {
            "enabled": true,
            "checkAutomatically": "NEVER",
            "fallbackToCacheTimeout": 0,
            "url": "https://u.expo.dev/9a772439-d019-4754-b333-bb6cf320fbb1"
        }
    }
}